<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvPSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Credit"
            android:visibility="gone"
            android:textColor="@color/brown_800"/>

    </LinearLayout>

        <TextView
            android:id="@+id/tvPSessPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Session Plan "
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@android:drawable/ic_menu_view"
            />

        <TextView
            android:id="@+id/tvPTimetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time Table"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@android:drawable/ic_menu_my_calendar"
            />



    </LinearLayout>

</LinearLayout>
